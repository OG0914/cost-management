# 服务器配置
PORT=3000
HOST=localhost
NODE_ENV=development

# PostgreSQL 数据库配置
# 格式: postgresql://用户名:密码@主机:端口/数据库名
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/cost_analysis

# 或者使用独立的配置项（如果不使用 DATABASE_URL）
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=cost_analysis
# PGUSER=postgres
# PGPASSWORD=your_password

# 连接池配置（可选）
# PG_POOL_MIN=2
# PG_POOL_MAX=20

# JWT 配置
# 重要：生产环境必须使用强密钥！
# 生成方法: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=8h

# CORS 白名单配置（多个域名用逗号分隔）
# 生产环境必须设置为实际前端域名
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# 请求限流配置（每 IP 每 15 分钟最大请求数）
# 登录接口固定为 10 次/15分钟
RATE_LIMIT_MAX=200

# 日志配置
# 可选值: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info
